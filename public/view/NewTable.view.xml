    <Page title="ALL ABOUT TABLE">
        <Table
            alternateRowColors="true"
            fixedLayout="false"
            headerText="THIS IS HEADER OF MY TABLE"
            footerText="THIS TABLE ENDED"
            noDataText="THERE IS NO DATA"
            multiSelectMode="SelectAll"
            mode="MultiSelect"
            id="NewwTable"
            items="{
			path: 'data>/',
			sorter: {
				path: 'Name'
			}
		}"
        >
            <headerToolbar>
                <OverflowToolbar>
                    <content>
                        <Title text="Documents" />
                        <ToolbarSpacer />
                        <SearchField
                            width="20%"
                            liveChange=".onFilter"
                            placeholder="enter File Name"
                        />
                        <Label text="Upload" />
                        <Button
                            text="Download"
                            type="Default"
                            enabled="false"
                            id="btnnn"
                        />
                        <SearchField change="onToggleInfoToolbar" />
                        <CheckBox
                            text="ColumnHeaders"
                            select="onSelect"
                        />
                        <CheckBox
                            text="HeaderToolbar"
                            select="onSelect"
                        />
                        <CheckBox
                            text="InfoToolbar"
                            select="onSelect"
                        />
                    </content>
                </OverflowToolbar>
            </headerToolbar>
            <infoToolbar>
                <OverflowToolbar>
                    <Label text="Wide range of available Files" />
                </OverflowToolbar>
            </infoToolbar>

            <columns>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                    width="17%"
                >
                    <Text text="File Name" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="ID" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Revision" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Status" />
                </Column>
                <Column
                    minScreenWidth="Tablet"
                    demandPopin="true"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="File Size" />
                </Column>
                <Column
                    minScreenWidth="Desktop"
                    demandPopin="true"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="File Size Bytes" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Last Modified" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Modified By" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Created By" />
                </Column>
                <Column
                    minScreenWidth="Phone"
                    demandPopin="false"
                    hAlign="Center"
                    vAlign="Middle"
                >
                    <Text text="Created On" />
                </Column>
            </columns>
            <items>
                <ColumnListItem
                    vAlign="Middle"
                    type="Active"
                >

                    <cells>
                        <HBox
                            alignContent="Center"
                            alignItems="Center"
                        >
                            <Image
                                class="sapUiSmallMargin"
                                src="https://ui5.sap.com/test-resources/sap/m/images/invoice_manager.png"
                            />
                            <VBox
                                alignContent="Center"
                                alignItems="Start"
                            >
                                <Link text="{data>fileName}" />
                                <ObjectIdentifier text="{data>fileType}" />
                            </VBox>
                        </HBox>
                    
                        <ObjectIdentifier text="{data>id}" />
                   
                        <Link text="{data>revision}" />
                    
                        <core:Icon
                            src="{
                            path: 'data>status',
                            formatter: 'formatter.statusText'
                            }"
                        />
                  
                        <ObjectIdentifier text="{data>fileSize}" />
                    
                        <ObjectIdentifier text="{data>fileSizeBytes}" />
                   
                        <ObjectIdentifier
                            title="{
                            path: 'data>lastModified',
                            formatter:'formatter.odate'
                        }"
                            text="{
                            path: 'data>lastModified',
                            formatter:'formatter.otime'
                        }"
                        />
                   
                        <ObjectIdentifier text="{data>modifiedBy}" />
                  
                        <ObjectIdentifier text="{data>createdBy}" />
                   
                        <ObjectIdentifier
                            title="{
                            path: 'data>createdOn',
                            formatter:'formatter.odate'
                        }"
                            text="{
                            path: 'data>createdOn',
                            formatter:'formatter.otime'
                        }"
                        />
                    </cells>
                </ColumnListItem>
            </items>
        </Table>

        <footer>
            <Bar>
                <contentRight>
                    <Button
                        text="OK"
                        type="Accept"
                        press="onSave"
                        class="sapUiTinyMargin"
                    />
                </contentRight>
            </Bar>
        </footer>
    </Page>
</mvc:View>
