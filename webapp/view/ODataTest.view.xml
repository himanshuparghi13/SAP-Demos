<mvc:View
    controllerName="hp.project3.controller.ODataTest"
    xmlns:mvc="sap.ui.core.mvc"
    xmlns="sap.m"
>
    <Page title="OData Service Test">
        <content>
            <VBox class="sapUiMediumMargin">
                <Button 
                    text="Test OData Connection" 
                    press="onTestConnection"
                    type="Emphasized"
                />
                <Button 
                    text="OData" 
                    press="onTestConnections"
                    type="Default"
                />
                <Button text="Create Product" press="onCreateEntry"/>
                <Text 
                    id="connectionStatus" 
                    text="Click button to test connection"
                    class="sapUiMediumMarginTop"
                />
                <Table
                    id="customersTable"
                    items="{/Products}"
                    visible="false"
                    class="sapUiMediumMarginTop"
                >
                    <headerToolbar>
                        <Toolbar>
                            <Title text="Customers (First 5)" />
                        </Toolbar>
                    </headerToolbar>
                    <columns>
                        <Column>
                            <Text text="ProductId" />
                        </Column>
                        <Column>
                            <Text text="ProductName" />
                        </Column>
                        <Column>
                            <Text text="UnitPrice" />
                        </Column>
                    </columns>
                    <items>
                        <ColumnListItem>
                            <cells>
                                <Text text="{= ${ProductID} + ' ' + ${ProductName}}" />
                                <Text text="{ProductName}" />
                                <Text text="{UnitPrice}" />
                                
                            </cells>
                        </ColumnListItem>
                    </items>
                </Table>
            </VBox>
        </content>
    </Page>
</mvc:View>